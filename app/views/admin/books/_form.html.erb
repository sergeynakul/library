<%= semantic_form_for [:admin, @book], builder: ActiveAdmin::FormBuilder do |f| %>
  <%= f.inputs do %>
    <%= f.input :group_id, label: 'Group', as: :select, collection: Group.all.map{ |group| [group.name, group.id] } %>
    <%= f.input :title %>
    <%= f.input :picture, as: :file %>
    <%= f.actions %>
  <% end %>
<% end %>